---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout>
  <h1>Posts</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/posts/${post.data.slug}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
