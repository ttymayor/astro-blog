---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ThemeHeadScript from "@/components/ThemeHeadScript.astro";
import { getCollection } from "astro:content";
import GlowCursor from "@/components/react/GlowCursor";

const site = await getCollection("site");
const title = site[0]?.data.title;
const description = site[0]?.data.description;
const url = site[0]?.data.url;
---

<!doctype html>
<html lang="en" transition:name="root">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <ThemeHeadScript />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="url" content={url} />

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />
    <ClientRouter />
  </head>
  <body class="m-0 h-full w-full">
    <GlowCursor client:idle />
    <Header />
    <main>
      <div
        class="mx-auto min-h-[calc(100vh-20rem)] w-full px-6 py-8 md:w-4/5 lg:w-3/5"
      >
        <div class="flex-1">
          <slot />
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
